<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Time Logs</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">

      <!-- Task Title -->
      <div class="mb-4">
        <h3 class="text-primary">üïí Time Logs for Task: <%= task.title %></h3>
      </div>

      <!-- Time Logs Table -->
      <% if (logs.length > 0) { %>
        <div class="card mb-4">
          <div class="card-header bg-secondary text-white">
            Logged Entries
          </div>
          <div class="card-body p-0">
            <table class="table table-striped mb-0">
              <thead class="table-light">
                <tr>
                  <th>Description</th>
                  <th>Duration (mins)</th>
                  <th>Billable</th>
                  <th>Date</th>
                </tr>
              </thead>
              <tbody>
                <% logs.forEach(log => { %>
                  <tr>
                    <td><%= log.description || 'N/A' %></td>
                    <td><%= log.duration %></td>
                    <td><%= log.billable ? 'Yes' : 'No' %></td>
                    <td><%= log.createdAt?.toLocaleDateString() || '' %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      <% } else { %>
        <p class="text-muted">No logs found for this task yet.</p>
      <% } %>

      <!-- Log Time Form -->
      <div class="card">
        <div class="card-header bg-success text-white">
          ‚è±Ô∏è Log Time
        </div>
        <div class="card-body">
          <form action="/tasks/<%= task._id %>/logtime" method="POST">
            <div class="mb-3">
              <label for="description" class="form-label">Description</label>
              <input type="text" name="description" class="form-control" placeholder="What did you work on?">
            </div>

            <div class="mb-3">
              <label for="duration" class="form-label">Duration (in minutes)</label>
              <input type="number" name="duration" class="form-control" required placeholder="e.g. 30">
            </div>

            <div class="form-check mb-3">
              <input type="checkbox" name="billable" class="form-check-input" id="billableCheck">
              <label for="billableCheck" class="form-check-label">Billable?</label>
            </div>

            <button type="submit" class="btn btn-success">‚ûï Add Time Log</button>
            <a href="/projects/<%= task.project._id %>" class="btn btn-outline-secondary ms-2">‚¨Ö Back to Project</a>
          </form>
        </div>
      </div>

    </div>
  </div>
</div>
</body>
</html>

