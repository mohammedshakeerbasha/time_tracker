<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Time Logs</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container py-5">
    
   <% if (user.role === 'Admin' || user.role === 'Manager') { %>
    <h2 class="mb-4">ðŸ•’ Total Logs</h2>
    <% }else{ %>
    <h2 class="mb-4">ðŸ•’ My Time Logs</h2>
    <% } %>

    <% if (logs.length === 0) { %>
      <div class="alert alert-info">No logs found.</div>
    <% } else { %>
      <table class="table table-striped shadow-sm bg-white">
        <thead class="table-light">
          <tr>
            <th>Task</th>
            <th>Description</th>
            <th>Duration</th>
            <th>Billable</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody>
          <% logs.forEach(log => { %>
            <tr>
              <td><%= log.task?.title || 'N/A' %></td>
              <td><%= log.description %></td>
              <td><%= log.duration %> min</td>
              <td><%= log.billable ? 'Yes' : 'No' %></td>
              <td><%= new Date(log.createdAt).toDateString() %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>

    <a href="/dashboard" class="btn btn-outline-secondary mt-3">â¬… Back</a>
  </div>
</body>
</html>
