<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Dashboard - Tracket</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2>Welcome, <%= user.name %></h2>
      <a href="/logout" class="btn btn-outline-danger">Logout</a>
    </div>

   <% if (user.role === 'Admin' || user.role === 'Manager') { %>
  <div class="d-flex justify-content-between align-items-center mb-3">
    <a href="/projects/new" class="btn btn-primary">âž• New Project</a>
    <a href="/timelogs" class="btn btn-outline-secondary">ðŸ“„ View Logs</a>
  </div>
<% } %>

    <div class="card shadow">
      <div class="card-body">
        <h4>Your Projects</h4>
        <% if (projects.length > 0) { %>
          <ul class="list-group">
            <% projects.forEach(project => { %>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <strong><%= project.name %></strong>
                <a href="/projects/<%= project._id %>" class="btn btn-sm btn-outline-primary">View</a>
              </li>
            <% }) %>
          </ul>
        <% } else { %>
          <p>No projects assigned yet.</p>
        <% } %>
      </div>
    </div>
  </div>
</body>
</html>
